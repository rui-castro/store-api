{
	"env": {
		"es6": true,
		"node": true,
		"jest": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:jest/recommended",
		"plugin:jest/style"
	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": ["jest"],
	"rules": {
		"semi": [
			"error",
			"always"
		],
		"no-unused-vars": [
			"warn"
		],
		"indent": [
			"error",
			"tab"
		]
	}
}
